<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DoctAid - Medical Assistant</title>
    <link rel="stylesheet" href="/css/chat.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/marked/marked.min.css" rel="stylesheet">
</head>
<body>
    <!-- User Info Modal -->
    <div class="modal fade" id="userInfoModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Before we begin...</h5>
                </div>
                <div class="modal-body">
                    <form id="userInfoForm">
                        <div class="mb-3">
                            <label class="form-label">Age</label>
                            <input type="number" class="form-control" name="age" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Gender</label>
                            <select class="form-control" name="gender" required>
                                <option value="">Select gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Weight (kg)</label>
                            <input type="number" step="0.1" class="form-control" name="weight" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Height (cm)</label>
                            <input type="number" class="form-control" name="height" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Start Chat</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid chat-app">
        <div class="chat-container">
            <div class="chat-header">
                <h3>Medical Assistant</h3>
                <!-- <button id="consultButton" class="btn btn-primary" onclick="window.location.href='/bookappointment';">
                    <i class="fas fa-user-md"></i> Consult a Doctor
                </button> -->
                <a href="/bookappointment" class="btn btn-primary" id="consultButton">
                    <i class="fas fa-user-md"></i> Consult a Doctor
                  </a>
            </div>

            <div class="chat-messages" id="chatMessages">
                <div class="message system">
                    Hello! I'm your medical assistant. How can I help you today?
                </div>
            </div>

            <div class="chat-input-container">
                <form id="chatForm" class="chat-form">
                    <textarea 
                        id="userInput" 
                        placeholder="Type your medical question here..." 
                        rows="1"
                        class="chat-input"
                    ></textarea>
                    <button type="submit" class="send-button">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </form>
                <div class="disclaimer">
                    This AI assistant provides general medical information. For specific medical advice, please consult your doctor.
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src="/js/chat.js"></script>
</body>
</html>